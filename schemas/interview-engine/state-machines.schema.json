{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://proveniq.io/schemas/interview-engine/state-machines.schema.json",
  "title": "Interview Engine Persona State Machines",
  "type": "object",
  "required": ["version","machines"],
  "properties": {
    "version": { "type": "string" },
    "machines": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/machineDef" }
    }
  },
  "definitions": {
    "machineDef": {
      "type": "object",
      "required": ["id","entry_conditions","max_steps","states","exit_conditions","fallback_route"],
      "properties": {
        "id": { "type": "string" },
        "entry_conditions": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "max_steps": { "type": "integer", "minimum": 0, "maximum": 10 },
        "states": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["state","prompt_templates","transitions"],
            "properties": {
              "state": { "type": "string" },
              "prompt_templates": { "type": "array", "minItems": 1, "items": { "type": "string" } },
              "transitions": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["when","next"],
                  "properties": {
                    "when": { "type": "string" },
                    "next": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "exit_conditions": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "fallback_route": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

